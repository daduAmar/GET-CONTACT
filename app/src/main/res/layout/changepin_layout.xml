<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">
    <!--android:background="@drawable/dialog_background"-->

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="320dp"
        android:layout_height="120dp"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="290dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:orientation="vertical">-->

        <View
            android:id="@+id/divider"
            android:layout_width="320dp"
            android:background="@drawable/grad1"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--</LinearLayout>-->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/reset2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </android.support.v7.widget.CardView>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="307dp"
                android:layout_height="290dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="150dp"
                android:orientation="vertical"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.44"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <EditText
                    android:id="@+id/old_pin"
                    android:layout_width="290dp"
                    android:layout_height="51dp"
                    android:layout_marginBottom="5dp"
                    android:drawableStart="@drawable/oldpin"
                    android:ems="10"
                    android:hint="Old Pin"
                    android:textColorHint="#ffff"
                    android:inputType="number"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:id="@+id/new_pin"
                    android:layout_width="290dp"
                    android:layout_height="51dp"
                    android:layout_marginBottom="5dp"
                    android:drawableStart="@drawable/lock_new"
                    android:ems="10"
                    android:hint="New Pin"
                    android:textColorHint="#ffff"
                    android:inputType="number"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:id="@+id/con_pin"
                    android:layout_width="290dp"
                    android:layout_height="51dp"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/confirm_new"
                    android:ems="10"
                    android:hint="Confirm Pin"
                    android:textColorHint="#ffff"
                    android:inputType="number"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.391"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cancel_btn_bg"
                    android:text="Cancel"
                    android:textColor="#f4eeee" />


                <Button
                    android:id="@+id/button"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:background="@drawable/reset_btn_bg"
                    android:text="Reset Pin"
                    android:textColor="#f4eeee" />


            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>